const { expect } = require("chai");

describe("KickFactory contract", function () {
  it("Deployment should start with no projects", async function () {
    const [owner] = await ethers.getSigners();

    const KickFactory = await ethers.getContractFactory("KickFactory");

    const hardhatKickFactory = await KickFactory.deploy();

    const ownerBalance = await hardhatKickFactory.balanceOf(owner.address);
    expect(await hardhatKickFactory.totalSupply()).to.equal(ownerBalance);
  });
});
